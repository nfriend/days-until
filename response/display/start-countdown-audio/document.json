{
  "type": "APLA",
  "version": "0.9",
  "description": "An audio congratulation after a user successfully creates a countdown.",
  "compositions": {},
  "resources": [],
  "mainTemplate": {
    "parameters": ["payload"],
    "item": {
      "type": "Mixer",
      "items": [
        {
          "type": "Speech",
          "contentType": "SSML",
          "content": "${payload.ssml}"
        },
        {
          "type": "Audio",
          "source": "${payload.audio}",
          "filters": [
            {
              "type": "Volume",
              "amount": "40%"
            },
            {
              "type": "FadeIn",
              "duration": 300
            },
            {
              "type": "FadeOut",
              "duration": 300
            }
          ]
        }
      ]
    }
  }
}
