{
  "type": "APL",
  "version": "1.4",
  "description": "A visual congratulation after a user successfully creates a countdown.",
  "settings": {},
  "import": [
    {
      "name": "alexa-layouts",
      "version": "1.2.0"
    }
  ],
  "resources": [],
  "styles": {},
  "onMount": [],
  "graphics": {},
  "commands": {},
  "layouts": {},
  "mainTemplate": {
    "parameters": ["payload"],
    "item": [
      {
        "type": "Container",
        "height": "100vh",
        "items": [
          {
            "type": "Container",
            "height": "100vh",
            "width": "100vw",
            "items": [
              {
                "type": "AlexaHeader",
                "headerTitle": "${payload.imageTemplateData.properties.title}",
                "headerAttributionImage": "${payload.imageTemplateData.properties.logoUrl}"
              },
              {
                "type": "Container",
                "width": "100%",
                "height": "70%",
                "paddingLeft": "@marginHorizontal",
                "paddingRight": "@marginHorizontal",
                "justifyContent": "start",
                "alignItems": "stretch",
                "items": [
                  {
                    "type": "Container",
                    "display": "${@viewportProfile == @hubRoundSmall ? 'none' : 'normal' }",
                    "paddingTop": "16dp",
                    "paddingLeft": "16dp",
                    "paddingRight": "16dp",
                    "paddingBottom": "16dp",
                    "items": [
                      {
                        "type": "AlexaImage",
                        "imageSource": "${payload.imageTemplateData.properties.image.sources[0].url}",
                        "imageScale": "best-fill",
                        "imageAlignment": "center",
                        "imageAspectRatio": "standard_landscape",
                        "imageWidth": "100%",
                        "imageHeight": "100%",
                        "imageRoundedCorner": true,
                        "grow": "${@viewportProfile == @hubRoundSmall ? 0 : 1}",
                        "items": []
                      }
                    ],
                    "grow": 1,
                    "direction": "row",
                    "shrink": 1
                  },
                  {
                    "type": "Container",
                    "paddingTop": "16dp",
                    "paddingLeft": "16dp",
                    "paddingRight": "16dp",
                    "paddingBottom": "16dp",
                    "items": [
                      {
                        "type": "Text",
                        "paddingTop": "12dp",
                        "paddingBottom": "12dp",
                        "grow": 1,
                        "textAlign": "center",
                        "textAlignVertical": "center",
                        "text": "15 days until My Birthday",
                        "fontStyle": "normal"
                      }
                    ],
                    "grow": 1,
                    "direction": "row",
                    "shrink": 1
                  }
                ],
                "direction": "row"
              }
            ]
          }
        ]
      }
    ]
  }
}
